                </div>

                <div class="page">
                    <p>Nội dung trang 10 (Trang cuối)...</p>
                </div>

            </div>

            <div class="pagination">
                <button class="nav-btn" id="prevBtn" onclick="changePage(-1)">← Trước</button>
                <span class="page-num" id="pageIndicator">1 / 10</span>
                <button class="nav-btn" id="nextBtn" onclick="changePage(1)">Sau →</button>
            </div>

            <div class="signature">- sora -</div>
        </div>
    </div>

    <script>
        const audio = document.getElementById("bg-music");
        const pages = document.querySelectorAll('.page');
        const cardContainer = document.getElementById("mainCard");
        const overlay = document.getElementById("overlay");
        const scrollArea = document.getElementById('scrollArea');
        let currentPage = 0;

        function startLetter() {
            audio.play().catch(e => console.log("Yêu cầu nhấn nút để phát nhạc."));
            overlay.style.opacity = '0';
            setTimeout(() => { overlay.style.visibility = 'hidden'; }, 1000);
            cardContainer.classList.add("show-card");
        }

        function updateDisplay() {
            pages.forEach((p, i) => p.classList.toggle('active', i === currentPage));
            document.getElementById('pageIndicator').innerText = `${currentPage + 1} / ${pages.length}`;
            document.getElementById('prevBtn').disabled = (currentPage === 0);
            document.getElementById('nextBtn').disabled = (currentPage === pages.length - 1);
            scrollArea.scrollTop = 0;
        }

        function changePage(step) {
            currentPage += step;
            updateDisplay();
        }

        updateDisplay();
    </script>
